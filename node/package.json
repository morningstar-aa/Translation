{
  "name": "telegram-translator",
  "version": "1.0.0",
  "description": "Telegram 聊天自动翻译工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder -m"
  },
  "build": {
    "appId": "com.translator.telegram",
    "productName": "TelegramTranslator",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "publisherName": "TelegramTranslator"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "package.json"
    ]
  },
  "keywords": [
    "telegram",
    "translator",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0"
  }
}